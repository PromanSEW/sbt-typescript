{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs", // amd?
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": false,
    "rootDir": "src/main/typescript",
    "outDir": "./src/main/resources",
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "node_modules/@types/node/*"
      ]
    },
    "lib": ["es6"],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch":true,
    "preserveConstEnums": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    // "outFile": "src/main/resources/typescript.js"
  },
  "exclude": [
    "example",
    "node_modules",
    "test",
    "src/sbt-test"
  ]
}
